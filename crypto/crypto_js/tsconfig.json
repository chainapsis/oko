{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["./*.js", "src/**/*.ts", "tests/**/*.ts"]
}
