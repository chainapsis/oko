# Oko API Server Docker Compose Environment Variables
# Copy this file to .env and modify the values according to your setup

# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=oko_dev
DB_PORT=5432
DB_SSL=false
PG_DATA_DIR=./pg_data

# Server Configuration
SERVER_PORT=4200
JWT_SECRET=jwtsecret
JWT_EXPIRES_IN=1H

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=no-reply@example.com
SMTP_PASS=your-app-password
FROM_EMAIL=no-reply@example.com
EMAIL_VERIFICATION_EXPIRATION_MINUTES=3

# S3 Configuration
S3_REGION=ap-northeast-2
S3_BUCKET=oko-wallet-customer
S3_ACCESS_KEY_ID=ID
S3_SECRET_ACCESS_KEY=SECRET_KEY

# Encryption Configuration
ENCRYPTION_SECRET=temp-enc-secret

# Elasticsearch Configuration (Optional)
ES_URL=
ES_INDEX=index
ES_CLIENT_INDEX=client_index
ES_USERNAME=username
ES_PASSWORD=pw

TYPEFORM_WEBHOOK_SECRET=typeform-webhook-secret

