{
  "name": "@oko-wallet/ksn-pg-interface",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./knexfile": "./knexfile.ts",
    "./commit_reveal": "./src/commit_reveal/index.ts"
  },
  "scripts": {
    "migrate": "MIGRATE_MODE=all NODE_COUNT=3 tsx ./src/bin/migrate/index.ts",
    "migrate_1": "MIGRATE_MODE=one NODE_ID=1 tsx ./src/bin/migrate/index.ts",
    "migrate_2": "MIGRATE_MODE=one NODE_ID=2 tsx ./src/bin/migrate/index.ts",
    "db_backup": "tsx ./src/bin/db_backup.ts",
    "db_restore": "tsx ./src/bin/db_restore.ts",
    "schema_make": "tsx ../../node_modules/knex/bin/cli.js migrate:make -x ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@oko-wallet/bytes": "^0.1.2-alpha.1",
    "@oko-wallet/ksn-interface": "^0.1.2-alpha.1",
    "@oko-wallet/stdlib-js": "^0.0.2-rc.44",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "pgsql-parser": "^17.7.8",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
